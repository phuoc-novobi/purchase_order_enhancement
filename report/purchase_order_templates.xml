<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_add_payment_term" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@t-if='o.date_order']" position="after">
            <div t-if="o.payment_term_id" class="col-3 bm-2">
                <strong>Payment Term:</strong>
                <p t-field="o.payment_term_id" class="m-0"/>
            </div>
        </xpath>
    </template>
</odoo>
