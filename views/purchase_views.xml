<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="enhanced_purchase_order_form" model="ir.ui.view">
        <field name="name">enhanced.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <field name="active" invisible="1"/>
                <button name="action_archive" type="object" class="oe_stat_button" attrs="{'invisible':['|', ('state', 'not in', ('done', 'cancel')), ('active', '=', False)]}" icon="fa-archive" string="Archive" groups="purchase.group_purchase_manager" />
                <button name="action_unarchive" type="object" class="oe_stat_button" attrs="{'invisible':[('active', '=', True)]}" icon="fa-archive" string="Unarchive" groups="purchase.group_purchase_manager" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="us_phone_number" widget="us_phone_number_wget"/>
            </xpath>
        </field>
    </record>

    <record id="enhanced_purchase_order_tree" model="ir.ui.view">
        <field name="name">enhanced.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="active" invisible="1"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-muted">not active or state == 'cancel'</attribute>
            </xpath>
        </field>
    </record>

    <record id="enhanced_purchase_order_search" model="ir.ui.view">
        <field name="name">enhanced.purchase.order.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="groups_id" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='activities_exception']" position="after">
                <separator/>
                <filter string="Show Archived" name="show_archived" domain="[('active','=',False)]"/>
            </xpath>
        </field>
    </record>

    <record id="archive_purchase_order" model="ir.actions.server">
        <field name="name">Archive Purchase Orders</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_archive()
        </field>
    </record>
</odoo>
